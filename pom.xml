<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2</groupId>
        <artifactId>wso2</artifactId>
        <version>5</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon.identity</groupId>
    <artifactId>identity-framework</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <name>WSO2 Carbon - Platform Aggregator Pom</name>
    <url>http://wso2.org</url>

    <scm>
        <url>https://github.com/wso2/carbon-identity-framework.git</url>
        <developerConnection>scm:git:https://github.com/wso2/carbon-identity-framework.git</developerConnection>
        <connection>scm:git:https://github.com/wso2/carbon-identity-framework.git</connection>
        <tag>HEAD</tag>
    </scm>

    <modules>
        <module>components/framework</module>
        <module>components/gateway</module>
        <module>features/org.wso2.carbon.identity.framework.feature</module>
        <module>features/org.wso2.carbon.identity.gateway.feature</module>
        <module>features/org.wso2.carbon.identity.gateway.resource.feature</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <!-- C5 -->
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.core</artifactId>
                <version>${osgi.core.api.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon</groupId>
                <artifactId>org.wso2.carbon.core</artifactId>
                <version>${carbon.kernel.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.eclipse.osgi</groupId>
                <artifactId>org.eclipse.osgi.services</artifactId>
                <version>${equinox.osgi.services.version}</version>
            </dependency>

            <dependency>
                <groupId>org.wso2.msf4j</groupId>
                <artifactId>msf4j-core</artifactId>
                <version>${msf4j.core.version}</version>
            </dependency>
            <dependency>
                <groupId>javax.ws.rs</groupId>
                <artifactId>javax.ws.rs-api</artifactId>
                <version>${rs-api.version}</version>
            </dependency>

            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${slf4j.version}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-log4j12</artifactId>
                <version>${slf4j.version}</version>
            </dependency>


            <dependency>
                <groupId>org.wso2.carbon.identity.commons</groupId>
                <artifactId>org.wso2.carbon.identity.commons</artifactId>
                <version>${carbon.identity.commons.version}</version>
            </dependency>


            <dependency>
                <groupId>org.wso2.carbon.identity</groupId>
                <artifactId>org.wso2.carbon.identity.framework</artifactId>
                <version>${identity.framework.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon.identity</groupId>
                <artifactId>org.wso2.carbon.identity.gateway</artifactId>
                <version>${identity.gateway.version}</version>
            </dependency>
            <dependency>
                <groupId>org.wso2.carbon.identity</groupId>
                <artifactId>org.wso2.carbon.identity.gateway.resource</artifactId>
                <version>${identity.gateway.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>


    <properties>
        <checkstyle.skip>true</checkstyle.skip>
        <findbugs.skip>true</findbugs.skip>

        <identity.framework.version>${project.version}</identity.framework.version>
        <identity.framework.export.version>${identity.framework.version}</identity.framework.export.version>
        <identity.framework.import.version.range>[1.0.0,2.0.0)</identity.framework.import.version.range>

        <identity.gateway.version>${project.version}</identity.gateway.version>
        <identity.gateway.export.version>${identity.framework.version}</identity.gateway.export.version>
        <identity.gateway.import.version.range>[1.0.0,2.0.0)</identity.gateway.import.version.range>


        <!-- Carbon platform version comes here-->
        <carbon.kernel.version>5.0.0</carbon.kernel.version>
        <carbon.kernel.package.export.version>5.0.0</carbon.kernel.package.export.version>
        <carbon.kernel.package.import.version.range>[5.0.0, 6.0.0)</carbon.kernel.package.import.version.range>

        <carbon.identity.commons.version>6.0.0-SNAPSHOT</carbon.identity.commons.version>
        <carbon.identity.common.import.version.range>[6.0.0-SNAPSHOT, 7.0.0)
        </carbon.identity.common.import.version.range>

        <osgi.core.api.version>6.0.0</osgi.core.api.version>
        <equinox.osgi.services.version>3.4.0.v20140312-2051</equinox.osgi.services.version>

        <osgi.framework.package.import.version.range>[1.8.0, 2.0.0)</osgi.framework.package.import.version.range>


        <msf4j.core.version>2.1.0</msf4j.core.version>
        <rs-api.version>2.0</rs-api.version>


        <slf4j.version>1.7.5</slf4j.version>
        <slf4j.logging.package.import.version.range>[1.7.1, 2.0.0)</slf4j.logging.package.import.version.range>

        <carbon.feature.plugin.version>2.0.1</carbon.feature.plugin.version>
    </properties>


</project>